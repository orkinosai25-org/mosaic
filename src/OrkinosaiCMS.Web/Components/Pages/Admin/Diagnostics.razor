@page "/admin/diagnostics"
@attribute [Authorize(Roles = "Administrator")]
@layout OrkinosaiCMS.Web.Components.Layout.Admin.AdminLayout
@using Microsoft.AspNetCore.Authorization
@using System.Text.Json
@inject HttpClient Http
@inject IConfiguration Configuration
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime

<PageTitle>Diagnostics - Mosaic CMS</PageTitle>

<div class="diagnostics-page">
    <div class="diagnostics-header">
        <h1>üîç System Diagnostics</h1>
        <p>View application configuration, logs, errors, and system status for troubleshooting</p>
    </div>

    @if (isLoading)
    {
        <div class="loading-indicator">
            <div class="spinner"></div>
            <p>Loading diagnostic information...</p>
        </div>
    }
    else if (error != null)
    {
        <div class="alert alert-danger">
            <strong>Error loading diagnostics:</strong> @error
        </div>
    }
    else
    {
        <div class="diagnostics-tabs">
            <button class="tab-button @(activeTab == "status" ? "active" : "")" @onclick="@(() => SetActiveTab("status"))">
                ‚úÖ Status
            </button>
            <button class="tab-button @(activeTab == "config" ? "active" : "")" @onclick="@(() => SetActiveTab("config"))">
                ‚öôÔ∏è Configuration
            </button>
            <button class="tab-button @(activeTab == "environment" ? "active" : "")" @onclick="@(() => SetActiveTab("environment"))">
                üåç Environment
            </button>
            <button class="tab-button @(activeTab == "logs" ? "active" : "")" @onclick="@(() => SetActiveTab("logs"))">
                üìã Logs
            </button>
            <button class="tab-button @(activeTab == "errors" ? "active" : "")" @onclick="@(() => SetActiveTab("errors"))">
                ‚ùå Errors
            </button>
        </div>

        <div class="diagnostics-content">
            @switch (activeTab)
            {
                case "status":
                    <div class="diagnostics-section">
                        <div class="section-header">
                            <h2>Application Status</h2>
                            <button class="btn-copy" @onclick="@(() => CopyToClipboard(statusData))">üìã Copy</button>
                        </div>
                        
                        @if (statusData != null)
                        {
                            <div class="status-grid">
                                @foreach (var item in GetStatusItems())
                                {
                                    <div class="status-item">
                                        <span class="status-label">@item.Key:</span>
                                        <span class="status-value">@item.Value</span>
                                    </div>
                                }
                            </div>
                            
                            @if (healthChecks != null && healthChecks.Any())
                            {
                                <h3 style="margin-top: 2rem;">Health Checks</h3>
                                <div class="health-checks">
                                    @foreach (var check in healthChecks)
                                    {
                                        <div class="health-check-item @GetHealthCheckClass(check.status)">
                                            <span class="health-check-name">@check.name</span>
                                            <span class="health-check-status">@check.status</span>
                                            @if (!string.IsNullOrEmpty(check.description))
                                            {
                                                <span class="health-check-description">@check.description</span>
                                            }
                                        </div>
                                    }
                                </div>
                            }
                            
                            <div class="raw-data">
                                <h3>Raw Data</h3>
                                <pre>@FormatJson(statusData)</pre>
                            </div>
                        }
                    </div>
                    break;

                case "config":
                    <div class="diagnostics-section">
                        <div class="section-header">
                            <h2>Configuration</h2>
                            <button class="btn-copy" @onclick="@(() => CopyToClipboard(configData))">üìã Copy</button>
                        </div>
                        <div class="alert alert-info">
                            <strong>Note:</strong> Sensitive values (passwords, secrets, keys) have been redacted for security.
                        </div>
                        
                        @if (configData != null)
                        {
                            <div class="raw-data">
                                <pre>@FormatJson(configData)</pre>
                            </div>
                        }
                    </div>
                    break;

                case "environment":
                    <div class="diagnostics-section">
                        <div class="section-header">
                            <h2>Environment Variables</h2>
                            <button class="btn-copy" @onclick="@(() => CopyToClipboard(environmentData))">üìã Copy</button>
                        </div>
                        <div class="alert alert-info">
                            <strong>Note:</strong> Sensitive values (passwords, secrets, keys) have been redacted for security.
                        </div>
                        
                        @if (environmentData != null)
                        {
                            <div class="env-vars">
                                @foreach (var kvp in GetEnvironmentVariables())
                                {
                                    <div class="env-var-item">
                                        <span class="env-var-key">@kvp.Key</span>
                                        <span class="env-var-value">@kvp.Value</span>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                    break;

                case "logs":
                    <div class="diagnostics-section">
                        <div class="section-header">
                            <h2>Recent Logs</h2>
                            <button class="btn-copy" @onclick="@(() => CopyToClipboard(logsData))">üìã Copy</button>
                        </div>
                        
                        @if (logsData != null && logs != null && logs.Any())
                        {
                            <div class="logs-container">
                                @foreach (var log in logs)
                                {
                                    <div class="log-entry @GetLogLevelClass(log.level)">
                                        <span class="log-timestamp">[@log.timestamp]</span>
                                        <span class="log-level">[@log.level]</span>
                                        @if (!string.IsNullOrEmpty(log.source))
                                        {
                                            <span class="log-source">[@log.source]</span>
                                        }
                                        <span class="log-message">@log.message</span>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <p>No logs available.</p>
                        }
                    </div>
                    break;

                case "errors":
                    <div class="diagnostics-section">
                        <div class="section-header">
                            <h2>Recent Errors</h2>
                            <button class="btn-copy" @onclick="@(() => CopyToClipboard(errorsData))">üìã Copy</button>
                        </div>
                        
                        @if (errorsData != null && errors != null && errors.Any())
                        {
                            <div class="errors-container">
                                @foreach (var error in errors)
                                {
                                    <div class="error-entry">
                                        <span class="error-timestamp">[@error.timestamp]</span>
                                        <span class="error-level">[@error.level]</span>
                                        @if (!string.IsNullOrEmpty(error.source))
                                        {
                                            <span class="error-source">[@error.source]</span>
                                        }
                                        <div class="error-message">@error.message</div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-success">
                                <strong>Good news!</strong> No recent errors found.
                            </div>
                        }
                    </div>
                    break;
            }
        </div>
    }
</div>

