@code {
    private bool isLoading = true;
    private string? error = null;
    private string activeTab = "status";
    
    private object? statusData;
    private object? configData;
    private object? environmentData;
    private object? logsData;
    private object? errorsData;
    
    private List<HealthCheckData>? healthChecks;
    private List<LogEntryData>? logs;
    private List<LogEntryData>? errors;

    protected override async Task OnInitializedAsync()
    {
        await LoadDiagnostics();
    }

    private async Task LoadDiagnostics()
    {
        try
        {
            isLoading = true;
            error = null;

            // Create HttpClient with proper authentication
            using var httpClient = new HttpClient
            {
                BaseAddress = new Uri(NavigationManager.BaseUri)
            };

            // Load status
            var statusResponse = await httpClient.GetAsync("/api/diagnostics/status");
            if (statusResponse.IsSuccessStatusCode)
            {
                var statusJson = await statusResponse.Content.ReadAsStringAsync();
                var statusResult = JsonSerializer.Deserialize<DiagnosticsResponse>(statusJson);
                if (statusResult?.data != null)
                {
                    statusData = statusResult.data;
                    
                    // Extract health checks
                    if (statusData is JsonElement statusElement)
                    {
                        if (statusElement.TryGetProperty("healthChecks", out var healthChecksElement))
                        {
                            healthChecks = JsonSerializer.Deserialize<List<HealthCheckData>>(healthChecksElement.GetRawText());
                        }
                    }
                }
            }

            // Load config
            var configResponse = await httpClient.GetAsync("/api/diagnostics/config");
            if (configResponse.IsSuccessStatusCode)
            {
                var configJson = await configResponse.Content.ReadAsStringAsync();
                var configResult = JsonSerializer.Deserialize<DiagnosticsResponse>(configJson);
                configData = configResult?.data;
            }

            // Load environment
            var envResponse = await httpClient.GetAsync("/api/diagnostics/environment");
            if (envResponse.IsSuccessStatusCode)
            {
                var envJson = await envResponse.Content.ReadAsStringAsync();
                var envResult = JsonSerializer.Deserialize<DiagnosticsResponse>(envJson);
                environmentData = envResult?.data;
            }

            // Load logs
            var logsResponse = await httpClient.GetAsync("/api/diagnostics/logs?maxLines=100");
            if (logsResponse.IsSuccessStatusCode)
            {
                var logsJson = await logsResponse.Content.ReadAsStringAsync();
                var logsResult = JsonSerializer.Deserialize<DiagnosticsLogsResponse>(logsJson);
                if (logsResult?.data != null)
                {
                    logs = logsResult.data;
                    logsData = logsResult;
                }
            }

            // Load errors
            var errorsResponse = await httpClient.GetAsync("/api/diagnostics/errors?maxLines=50");
            if (errorsResponse.IsSuccessStatusCode)
            {
                var errorsJson = await errorsResponse.Content.ReadAsStringAsync();
                var errorsResult = JsonSerializer.Deserialize<DiagnosticsLogsResponse>(errorsJson);
                if (errorsResult?.data != null)
                {
                    errors = errorsResult.data;
                    errorsData = errorsResult;
                }
            }
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
        finally
        {
            isLoading = false;
        }
    }

    private void SetActiveTab(string tab)
    {
        activeTab = tab;
    }

    private string FormatJson(object? data)
    {
        if (data == null) return "null";
        
        try
        {
            var options = new JsonSerializerOptions
            {
                WriteIndented = true,
                PropertyNamingPolicy = JsonNamingPolicy.CamelCase
            };
            return JsonSerializer.Serialize(data, options);
        }
        catch
        {
            return data.ToString() ?? "null";
        }
    }

    private async Task CopyToClipboard(object? data)
    {
        if (data == null) return;
        
        try
        {
            var text = FormatJson(data);
            await JSRuntime.InvokeVoidAsync("navigator.clipboard.writeText", text);
        }
        catch
        {
            // Clipboard API might not be available
        }
    }

    private List<KeyValuePair<string, string>> GetStatusItems()
    {
        var items = new List<KeyValuePair<string, string>>();
        
        if (statusData is JsonElement element)
        {
            var properties = new[] { "applicationName", "version", "environment", "dotnetVersion", "osVersion", "machineName", "uptime", "workingSet", "healthStatus" };
            
            foreach (var prop in properties)
            {
                if (element.TryGetProperty(prop, out var value))
                {
                    items.Add(new KeyValuePair<string, string>(
                        prop.Replace("Name", " Name").Replace("Version", " Version").Replace("Status", " Status"),
                        value.ToString()
                    ));
                }
            }
        }
        
        return items;
    }

    private List<KeyValuePair<string, string>> GetEnvironmentVariables()
    {
        var vars = new List<KeyValuePair<string, string>>();
        
        if (environmentData is JsonElement element)
        {
            foreach (var prop in element.EnumerateObject())
            {
                vars.Add(new KeyValuePair<string, string>(prop.Name, prop.Value.ToString()));
            }
        }
        
        return vars.OrderBy(kv => kv.Key).ToList();
    }

    private string GetHealthCheckClass(string status)
    {
        return status.ToLowerInvariant() switch
        {
            "healthy" => "healthy",
            "degraded" => "degraded",
            "unhealthy" => "unhealthy",
            _ => ""
        };
    }

    private string GetLogLevelClass(string level)
    {
        var levelUpper = level.ToUpperInvariant();
        if (levelUpper.Contains("INF") || levelUpper.Contains("INFORMATION"))
            return "info";
        if (levelUpper.Contains("WRN") || levelUpper.Contains("WARN"))
            return "warning";
        if (levelUpper.Contains("ERR") || levelUpper.Contains("ERROR") || levelUpper.Contains("FTL") || levelUpper.Contains("FATAL"))
            return "error";
        return "";
    }

    private class DiagnosticsResponse
    {
        public bool success { get; set; }
        public object? data { get; set; }
    }

    private class DiagnosticsLogsResponse
    {
        public bool success { get; set; }
        public List<LogEntryData>? data { get; set; }
    }

    private class LogEntryData
    {
        public DateTime timestamp { get; set; }
        public string level { get; set; } = "";
        public string source { get; set; } = "";
        public string message { get; set; } = "";
    }

    private class HealthCheckData
    {
        public string name { get; set; } = "";
        public string status { get; set; } = "";
        public string? description { get; set; }
        public string? duration { get; set; }
    }
}
