@page "/admin/themes"
@attribute [Authorize(Roles = "Administrator")]
@layout OrkinosaiCMS.Web.Components.Layout.Admin.AdminLayout
@using Microsoft.AspNetCore.Authorization
@using OrkinosaiCMS.Core.Entities.Sites
@using OrkinosaiCMS.Core.Interfaces.Services
@inject IThemeService ThemeService
@inject NavigationManager NavigationManager

<PageTitle>Theme Management - OrkinosaiCMS</PageTitle>

<div class="themes-page">
    <div class="page-header">
        <div>
            <h1>Theme Management</h1>
            <p>Select and customize themes for your website</p>
        </div>
        <button class="btn-primary" @onclick="ShowCreateTheme" disabled="@isProcessing">
            <span>‚ûï</span> Create Custom Theme
        </button>
    </div>

    @* Success and error message notifications *@
    @if (!string.IsNullOrEmpty(statusMessage))
    {
        <div class="alert alert-success" role="alert">
            <span class="alert-icon">‚úì</span>
            @statusMessage
        </div>
    }

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger" role="alert">
            <span class="alert-icon">‚úó</span>
            @errorMessage
        </div>
    }

    @if (themes == null)
    {
        <div class="loading">
            <div class="spinner"></div>
            <p>Loading themes...</p>
        </div>
    }
    else
    {
        <div class="theme-categories">
            <button class="category-btn @(selectedCategory == "All" ? "active" : "")" @onclick='() => FilterThemes("All")'>
                All Themes
            </button>
            <button class="category-btn @(selectedCategory == "Modern" ? "active" : "")" @onclick='() => FilterThemes("Modern")'>
                Modern
            </button>
            <button class="category-btn @(selectedCategory == "SharePoint" ? "active" : "")" @onclick='() => FilterThemes("SharePoint")'>
                SharePoint
            </button>
            <button class="category-btn @(selectedCategory == "Dashboard" ? "active" : "")" @onclick='() => FilterThemes("Dashboard")'>
                Dashboard
            </button>
            <button class="category-btn @(selectedCategory == "Minimal" ? "active" : "")" @onclick='() => FilterThemes("Minimal")'>
                Minimal
            </button>
            <button class="category-btn @(selectedCategory == "Marketing" ? "active" : "")" @onclick='() => FilterThemes("Marketing")'>
                Marketing
            </button>
        </div>

        <div class="themes-grid">
            @foreach (var theme in filteredThemes)
            {
                <div class="theme-card @(theme.IsEnabled ? "" : "disabled")">
                    <div class="theme-preview">
                        @if (!string.IsNullOrEmpty(theme.ThumbnailUrl))
                        {
                            <img src="@theme.ThumbnailUrl" alt="@theme.Name" />
                        }
                        else
                        {
                            <div class="theme-placeholder">
                                <span class="theme-icon">üé®</span>
                            </div>
                        }
                    </div>
                    <div class="theme-info">
                        <div class="theme-header">
                            <h3>@theme.Name</h3>
                            @if (theme.IsSystem)
                            {
                                <span class="badge system">System</span>
                            }
                            @if (!theme.IsEnabled)
                            {
                                <span class="badge disabled">Disabled</span>
                            }
                        </div>
                        <p class="theme-description">@theme.Description</p>
                        <div class="theme-meta">
                            <span class="meta-item">
                                <strong>Category:</strong> @theme.Category
                            </span>
                            <span class="meta-item">
                                <strong>Layout:</strong> @theme.LayoutType
                            </span>
                            @if (theme.IsMobileResponsive)
                            {
                                <span class="badge responsive">üì± Mobile Responsive</span>
                            }
                        </div>
                        @if (!string.IsNullOrEmpty(theme.PrimaryColor))
                        {
                            <div class="theme-colors">
                                <div class="color-swatch" style="background: @theme.PrimaryColor" title="Primary"></div>
                                @if (!string.IsNullOrEmpty(theme.SecondaryColor))
                                {
                                    <div class="color-swatch" style="background: @theme.SecondaryColor" title="Secondary"></div>
                                }
                                @if (!string.IsNullOrEmpty(theme.AccentColor))
                                {
                                    <div class="color-swatch" style="background: @theme.AccentColor" title="Accent"></div>
                                }
                            </div>
                        }
                        <div class="theme-actions">
                            <button class="btn-action preview" @onclick="() => PreviewTheme(theme)" disabled="@isProcessing">
                                üëÅÔ∏è Preview
                            </button>
                            <button class="btn-action apply" @onclick="() => ApplyTheme(theme)" disabled="@isProcessing">
                                @if (isProcessing)
                                {
                                    <span class="spinner-small"></span>
                                    <span>Applying...</span>
                                }
                                else
                                {
                                    <span>‚úì Apply Theme</span>
                                }
                            </button>
                            @if (!theme.IsSystem)
                            {
                                <button class="btn-action edit" @onclick="() => EditTheme(theme)" disabled="@isProcessing">
                                    ‚úèÔ∏è Edit
                                </button>
                            }
                            else
                            {
                                <button class="btn-action clone" @onclick="() => CloneTheme(theme)" disabled="@isProcessing">
                                    üìã Clone
                                </button>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

