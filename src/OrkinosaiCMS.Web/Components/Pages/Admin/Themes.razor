@code {
    private List<Theme>? themes;
    private List<Theme> filteredThemes = new();
    private string selectedCategory = "All";
    private string? statusMessage;
    private string? errorMessage;
    private bool isProcessing;

    protected override async Task OnInitializedAsync()
    {
        await LoadThemes();
    }

    private async Task LoadThemes()
    {
        var allThemes = await ThemeService.GetAllThemesAsync();
        themes = allThemes.ToList();
        FilterThemes(selectedCategory);
    }

    private void FilterThemes(string category)
    {
        selectedCategory = category;
        if (themes == null) return;

        if (category == "All")
        {
            filteredThemes = themes.ToList();
        }
        else
        {
            filteredThemes = themes.Where(t => t.Category == category).ToList();
        }
    }

    private void PreviewTheme(Theme theme)
    {
        // TODO: Implement theme preview
        Console.WriteLine($"Preview theme: {theme.Name}");
    }

    /// <summary>
    /// Apply theme to site with improved error handling following Oqtane CMS patterns
    /// </summary>
    private async Task ApplyTheme(Theme theme)
    {
        if (isProcessing) return;
        
        try
        {
            isProcessing = true;
            statusMessage = null;
            errorMessage = null;
            StateHasChanged();

            // Get the default site ID (in a production system, this would come from context or configuration)
            const int defaultSiteId = 1; // TODO: Replace with ISiteContext or IConfiguration service
            
            await ThemeService.ApplyThemeToSiteAsync(defaultSiteId, theme.Id);
            
            statusMessage = $"Successfully applied theme '{theme.Name}'. The site theme has been updated.";
            Console.WriteLine($"‚úì Applied theme: {theme.Name}");
        }
        catch (InvalidOperationException ex)
        {
            // User-friendly validation or business logic errors
            errorMessage = ex.Message;
            Console.WriteLine($"‚úó Theme application error: {ex.Message}");
        }
        catch (Exception ex)
        {
            // Unexpected errors - show generic message but log details
            errorMessage = "Unable to apply theme. Please try again later or contact support if the issue persists.";
            Console.WriteLine($"‚úó Unexpected error applying theme '{theme.Name}': {ex.Message}");
            
            // Log inner exception if present
            if (ex.InnerException != null)
            {
                Console.WriteLine($"  Inner exception: {ex.InnerException.Message}");
            }
        }
        finally
        {
            isProcessing = false;
            StateHasChanged();
        }
    }

    private void EditTheme(Theme theme)
    {
        NavigationManager.NavigateTo($"/admin/themes/edit/{theme.Id}");
    }

    private async Task CloneTheme(Theme theme)
    {
        if (isProcessing) return;
        
        try
        {
            isProcessing = true;
            statusMessage = null;
            errorMessage = null;
            StateHasChanged();
            
            var clonedTheme = await ThemeService.CloneThemeAsync(theme.Id, $"{theme.Name} (Custom)", $"Customized version of {theme.Name}");
            await LoadThemes();
            
            statusMessage = $"Successfully cloned theme '{theme.Name}' as '{clonedTheme.Name}'.";
            Console.WriteLine($"‚úì Cloned theme: {clonedTheme.Name}");
        }
        catch (InvalidOperationException ex)
        {
            errorMessage = ex.Message;
            Console.WriteLine($"‚úó Theme cloning error: {ex.Message}");
        }
        catch (Exception ex)
        {
            errorMessage = "Unable to clone theme. Please try again later or contact support if the issue persists.";
            Console.WriteLine($"‚úó Error cloning theme: {ex.Message}");
        }
        finally
        {
            isProcessing = false;
            StateHasChanged();
        }
    }

    private void ShowCreateTheme()
    {
        NavigationManager.NavigateTo("/admin/themes/create");
    }
}
