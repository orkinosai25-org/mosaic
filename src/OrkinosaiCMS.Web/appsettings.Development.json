{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Information"
      }
    }
  },
  "DatabaseEnabled": true,
  "DatabaseProvider": "InMemory",
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=OrkinosaiCMS;Trusted_Connection=True;TrustServerCertificate=True;MultipleActiveResultSets=True",
    "SqliteConnection": "Data Source=orkinosai-cms-dev.db"
  },
  "CMS": {
    "SiteName": "OrkinosaiCMS Development",
    "DefaultTheme": "Default",
    "EnableModuleDiscovery": true,
    "AllowRegistration": true
  },
  "Authentication": {
    "_comment": "Development environment - OAuth credentials optional for testing",
    "Google": {
      "ClientId": "",
      "ClientSecret": ""
    }
  },
  "ErrorHandling": {
    "ShowDetailedErrors": true,
    "IncludeStackTrace": true
  }
}
