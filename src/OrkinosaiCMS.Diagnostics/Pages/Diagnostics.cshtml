@page
@model OrkinosaiCMS.Diagnostics.Pages.DiagnosticsModel
@{
    ViewData["Title"] = "OrkinosaiCMS Diagnostics";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: #333;
            padding: 20px;
            min-height: 100vh;
        }
        
        .container {
            max-width: 1400px;
            margin: 0 auto;
        }
        
        .header {
            background: white;
            border-radius: 12px;
            padding: 30px;
            margin-bottom: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        
        .header h1 {
            color: #667eea;
            font-size: 2.5rem;
            margin-bottom: 10px;
        }
        
        .header p {
            color: #666;
            font-size: 1.1rem;
        }
        
        .status-badge {
            display: inline-block;
            padding: 6px 16px;
            border-radius: 20px;
            font-weight: 600;
            font-size: 0.9rem;
            margin-left: 15px;
        }
        
        .status-healthy {
            background: #d4edda;
            color: #155724;
        }
        
        .status-unhealthy {
            background: #f8d7da;
            color: #721c24;
        }
        
        .tabs {
            background: white;
            border-radius: 12px;
            padding: 10px;
            margin-bottom: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
        }
        
        .tab-button {
            padding: 12px 24px;
            border: none;
            background: #f0f0f0;
            border-radius: 8px;
            cursor: pointer;
            font-size: 1rem;
            font-weight: 500;
            transition: all 0.3s ease;
        }
        
        .tab-button:hover {
            background: #e0e0e0;
        }
        
        .tab-button.active {
            background: #667eea;
            color: white;
        }
        
        .content-section {
            background: white;
            border-radius: 12px;
            padding: 30px;
            margin-bottom: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            display: none;
        }
        
        .content-section.active {
            display: block;
        }
        
        .section-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
            padding-bottom: 15px;
            border-bottom: 2px solid #f0f0f0;
        }
        
        .section-title {
            font-size: 1.5rem;
            color: #333;
            font-weight: 600;
        }
        
        .copy-button {
            padding: 10px 20px;
            background: #667eea;
            color: white;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-size: 0.9rem;
            font-weight: 500;
            transition: background 0.3s ease;
        }
        
        .copy-button:hover {
            background: #5568d3;
        }
        
        .copy-button:active {
            background: #4557b7;
        }
        
        .info-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
            margin-bottom: 20px;
        }
        
        .info-card {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 8px;
            border-left: 4px solid #667eea;
        }
        
        .info-label {
            font-weight: 600;
            color: #666;
            font-size: 0.85rem;
            text-transform: uppercase;
            margin-bottom: 8px;
        }
        
        .info-value {
            font-size: 1.1rem;
            color: #333;
            word-break: break-word;
        }
        
        .log-container {
            background: #1e1e1e;
            color: #d4d4d4;
            padding: 20px;
            border-radius: 8px;
            max-height: 600px;
            overflow-y: auto;
            font-family: 'Courier New', monospace;
            font-size: 0.9rem;
            line-height: 1.6;
        }
        
        .log-entry {
            margin-bottom: 8px;
            padding: 4px 0;
        }
        
        .log-error {
            color: #f48771;
        }
        
        .log-warning {
            color: #dcdcaa;
        }
        
        .log-info {
            color: #4fc1ff;
        }
        
        .config-tree {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 8px;
            max-height: 600px;
            overflow-y: auto;
        }
        
        pre {
            margin: 0;
            white-space: pre-wrap;
            word-wrap: break-word;
        }
        
        .env-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        
        .env-table th,
        .env-table td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #e0e0e0;
        }
        
        .env-table th {
            background: #f8f9fa;
            font-weight: 600;
            color: #666;
        }
        
        .env-table tr:hover {
            background: #f8f9fa;
        }
        
        .error-banner {
            background: #f8d7da;
            border-left: 4px solid #dc3545;
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 20px;
        }
        
        .error-banner h3 {
            color: #721c24;
            margin-bottom: 10px;
        }
        
        .error-list {
            list-style: none;
            padding: 0;
        }
        
        .error-list li {
            background: white;
            padding: 12px;
            margin-bottom: 8px;
            border-radius: 4px;
            color: #721c24;
        }
        
        .loading {
            text-align: center;
            padding: 40px;
            color: #666;
        }
        
        .spinner {
            border: 4px solid #f3f3f3;
            border-top: 4px solid #667eea;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            animation: spin 1s linear infinite;
            margin: 20px auto;
        }
        
        @@keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
        
        .timestamp {
            color: #999;
            font-size: 0.9rem;
            font-style: italic;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>
                üîç OrkinosaiCMS Diagnostics
                <span class="status-badge status-unhealthy" id="status-badge">Loading...</span>
            </h1>
            <p>Independent diagnostic harness - accessible even when main application fails</p>
            <p class="timestamp">Report generated: <span id="report-timestamp">Loading...</span></p>
        </div>
        
        <div class="tabs">
            <button class="tab-button active" onclick="showTab('overview')">üìä Overview</button>
            <button class="tab-button" onclick="showTab('errors')">‚ö†Ô∏è Errors</button>
            <button class="tab-button" onclick="showTab('logs')">üìù Logs</button>
            <button class="tab-button" onclick="showTab('config')">‚öôÔ∏è Configuration</button>
            <button class="tab-button" onclick="showTab('environment')">üåç Environment</button>
            <button class="tab-button" onclick="showTab('system')">üíª System</button>
        </div>
        
        <div id="overview" class="content-section active">
            <div class="section-header">
                <h2 class="section-title">Application Overview</h2>
                <button class="copy-button" onclick="copySection('overview')">üìã Copy</button>
            </div>
            <div class="loading">
                <div class="spinner"></div>
                <p>Loading diagnostic data...</p>
            </div>
            <div id="overview-content" style="display: none;"></div>
        </div>
        
        <div id="errors" class="content-section">
            <div class="section-header">
                <h2 class="section-title">Recent Errors & Startup Issues</h2>
                <button class="copy-button" onclick="copySection('errors')">üìã Copy</button>
            </div>
            <div id="errors-content"></div>
        </div>
        
        <div id="logs" class="content-section">
            <div class="section-header">
                <h2 class="section-title">Recent Logs</h2>
                <button class="copy-button" onclick="copySection('logs')">üìã Copy</button>
            </div>
            <div class="log-container" id="logs-content"></div>
        </div>
        
        <div id="config" class="content-section">
            <div class="section-header">
                <h2 class="section-title">Configuration (Sensitive Data Redacted)</h2>
                <button class="copy-button" onclick="copySection('config')">üìã Copy</button>
            </div>
            <div class="config-tree" id="config-content"></div>
        </div>
        
        <div id="environment" class="content-section">
            <div class="section-header">
                <h2 class="section-title">Environment Variables</h2>
                <button class="copy-button" onclick="copySection('environment')">üìã Copy</button>
            </div>
            <table class="env-table" id="environment-content"></table>
        </div>
        
        <div id="system" class="content-section">
            <div class="section-header">
                <h2 class="section-title">System Information</h2>
                <button class="copy-button" onclick="copySection('system')">üìã Copy</button>
            </div>
            <div id="system-content"></div>
        </div>
    </div>
    
    <script>
        let reportData = null;
        
        // Load diagnostic data on page load
        window.addEventListener('DOMContentLoaded', async () => {
            try {
                const response = await fetch('/api/diagnostics/report');
                reportData = await response.json();
                
                renderReport(reportData);
            } catch (error) {
                console.error('Error loading diagnostic data:', error);
                document.querySelector('.loading').innerHTML = `
                    <p style="color: #dc3545;">Error loading diagnostic data: ${error.message}</p>
                `;
            }
        });
        
        function renderReport(data) {
            // Update timestamp
            document.getElementById('report-timestamp').textContent = new Date(data.timestamp).toLocaleString();
            
            // Update status badge
            const statusBadge = document.getElementById('status-badge');
            if (data.startup.isHealthy) {
                statusBadge.textContent = 'Healthy';
                statusBadge.className = 'status-badge status-healthy';
            } else {
                statusBadge.textContent = 'Issues Detected';
                statusBadge.className = 'status-badge status-unhealthy';
            }
            
            // Render overview
            renderOverview(data);
            
            // Render errors
            renderErrors(data);
            
            // Render logs
            renderLogs(data.recentLogs);
            
            // Render configuration
            renderConfig(data.configuration);
            
            // Render environment variables
            renderEnvironment(data.environmentVariables);
            
            // Render system info
            renderSystem(data.system);
            
            // Show content
            document.querySelector('.loading').style.display = 'none';
            document.getElementById('overview-content').style.display = 'block';
        }
        
        function renderOverview(data) {
            const html = `
                <div class="info-grid">
                    <div class="info-card">
                        <div class="info-label">Application Name</div>
                        <div class="info-value">${data.application.name}</div>
                    </div>
                    <div class="info-card">
                        <div class="info-label">Version</div>
                        <div class="info-value">${data.application.version}</div>
                    </div>
                    <div class="info-card">
                        <div class="info-label">Environment</div>
                        <div class="info-value">${data.application.environment}</div>
                    </div>
                    <div class="info-card">
                        <div class="info-label">Machine Name</div>
                        <div class="info-value">${data.machineName}</div>
                    </div>
                    <div class="info-card">
                        <div class="info-label">Content Root Path</div>
                        <div class="info-value">${data.application.contentRootPath}</div>
                    </div>
                    <div class="info-card">
                        <div class="info-label">Last Successful Start</div>
                        <div class="info-value">${data.startup.lastSuccessfulStart ? new Date(data.startup.lastSuccessfulStart).toLocaleString() : 'Unknown'}</div>
                    </div>
                </div>
            `;
            document.getElementById('overview-content').innerHTML = html;
        }
        
        function renderErrors(data) {
            let html = '';
            
            if (data.startup.startupErrors && data.startup.startupErrors.length > 0) {
                html += `
                    <div class="error-banner">
                        <h3>üö® Startup Errors Detected</h3>
                        <ul class="error-list">
                            ${data.startup.startupErrors.map(err => `<li>${escapeHtml(err)}</li>`).join('')}
                        </ul>
                    </div>
                `;
            }
            
            if (data.recentErrors && data.recentErrors.length > 0) {
                html += `
                    <h3 style="margin-bottom: 15px;">Recent Error Log Entries</h3>
                    <div class="log-container">
                        ${data.recentErrors.map(log => `
                            <div class="log-entry log-error">
                                [${new Date(log.timestamp).toLocaleString()}] [${log.level}] ${log.source ? '[' + log.source + ']' : ''} ${escapeHtml(log.message)}
                            </div>
                        `).join('')}
                    </div>
                `;
            } else {
                html += '<p>‚úÖ No recent errors found</p>';
            }
            
            document.getElementById('errors-content').innerHTML = html;
        }
        
        function renderLogs(logs) {
            const html = logs.map(log => {
                let cssClass = 'log-info';
                if (log.level.includes('ERR') || log.level.includes('FTL')) {
                    cssClass = 'log-error';
                } else if (log.level.includes('WRN')) {
                    cssClass = 'log-warning';
                }
                
                return `
                    <div class="log-entry ${cssClass}">
                        [${new Date(log.timestamp).toLocaleString()}] [${log.level}] ${log.source ? '[' + log.source + ']' : ''} ${escapeHtml(log.message)}
                    </div>
                `;
            }).join('');
            
            document.getElementById('logs-content').innerHTML = html || '<p>No logs available</p>';
        }
        
        function renderConfig(config) {
            document.getElementById('config-content').innerHTML = `<pre>${JSON.stringify(config, null, 2)}</pre>`;
        }
        
        function renderEnvironment(envVars) {
            const html = `
                <thead>
                    <tr>
                        <th>Variable Name</th>
                        <th>Value</th>
                    </tr>
                </thead>
                <tbody>
                    ${Object.entries(envVars).map(([key, value]) => `
                        <tr>
                            <td><strong>${escapeHtml(key)}</strong></td>
                            <td>${escapeHtml(value)}</td>
                        </tr>
                    `).join('')}
                </tbody>
            `;
            document.getElementById('environment-content').innerHTML = html;
        }
        
        function renderSystem(system) {
            const html = `
                <div class="info-grid">
                    <div class="info-card">
                        <div class="info-label">.NET Version</div>
                        <div class="info-value">${system.dotNetVersion}</div>
                    </div>
                    <div class="info-card">
                        <div class="info-label">OS Version</div>
                        <div class="info-value">${system.osVersion}</div>
                    </div>
                    <div class="info-card">
                        <div class="info-label">64-Bit Process</div>
                        <div class="info-value">${system.is64BitProcess ? 'Yes' : 'No'}</div>
                    </div>
                    <div class="info-card">
                        <div class="info-label">Processor Count</div>
                        <div class="info-value">${system.processorCount}</div>
                    </div>
                    <div class="info-card">
                        <div class="info-label">Working Set (Memory)</div>
                        <div class="info-value">${system.workingSet}</div>
                    </div>
                    <div class="info-card">
                        <div class="info-label">Uptime</div>
                        <div class="info-value">${system.uptime}</div>
                    </div>
                </div>
            `;
            document.getElementById('system-content').innerHTML = html;
        }
        
        function showTab(tabName) {
            // Hide all sections
            document.querySelectorAll('.content-section').forEach(section => {
                section.classList.remove('active');
            });
            
            // Remove active class from all tabs
            document.querySelectorAll('.tab-button').forEach(button => {
                button.classList.remove('active');
            });
            
            // Show selected section
            document.getElementById(tabName).classList.add('active');
            
            // Add active class to clicked tab
            event.target.classList.add('active');
        }
        
        function copySection(sectionName) {
            let text = '';
            
            if (reportData) {
                switch (sectionName) {
                    case 'overview':
                        text = JSON.stringify({
                            application: reportData.application,
                            timestamp: reportData.timestamp,
                            machineName: reportData.machineName,
                            startup: reportData.startup
                        }, null, 2);
                        break;
                    case 'errors':
                        text = JSON.stringify(reportData.recentErrors, null, 2);
                        break;
                    case 'logs':
                        text = JSON.stringify(reportData.recentLogs, null, 2);
                        break;
                    case 'config':
                        text = JSON.stringify(reportData.configuration, null, 2);
                        break;
                    case 'environment':
                        text = JSON.stringify(reportData.environmentVariables, null, 2);
                        break;
                    case 'system':
                        text = JSON.stringify(reportData.system, null, 2);
                        break;
                }
            }
            
            navigator.clipboard.writeText(text).then(() => {
                const button = event.target;
                const originalText = button.textContent;
                button.textContent = '‚úì Copied!';
                setTimeout(() => {
                    button.textContent = originalText;
                }, 2000);
            }).catch(err => {
                console.error('Failed to copy:', err);
                alert('Failed to copy to clipboard');
            });
        }
        
        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }
    </script>
</body>
</html>
